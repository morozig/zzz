{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "console": "internalConsole",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/build/**/*.js"],
            "preLaunchTask": "compile"
        },
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}/build/release",
            "sourceMaps": true
        }
    ]
}
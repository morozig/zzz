{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "console": "internalConsole",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/build/**/*.js"],
            "preLaunchTask": "compile"
        },
        {
            "name": "Attach",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "localhost:3000",
            "smartStep": true,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/build/release"
        }
    ]
}